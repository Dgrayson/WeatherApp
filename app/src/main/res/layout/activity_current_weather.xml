<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3910C0"
    tools:context=".CurrentWeather">

    <TextView
        android:id="@+id/cityNameTextView"
        android:layout_width="18dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="199dp"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/cityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/cityNameTextView"
        android:layout_marginStart="101dp"
        android:text="@string/city_name"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/currentConditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/cityName"
        android:layout_alignTop="@+id/currentConditionsTextView"
        android:text="@string/current_conditions"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/currentConditionsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="155dp"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/cityName"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="119dp"
        android:text="@string/temp"
        android:textSize="50sp"/>

    <TextView
        android:id="@+id/tempTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cityNameTextView"
        android:layout_alignTop="@+id/temperature" />

    <TextView
        android:id="@+id/weatherIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="108dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="90sp"/>

</RelativeLayout>